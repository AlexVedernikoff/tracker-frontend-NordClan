log_format  main_ext  '$remote_addr - $remote_user [$time_local] "$request" '
                        '$status $body_bytes_sent "$http_referer" '
                        '"$http_user_agent" "$http_x_forwarded_for" '
                        '"$host" sn="$server_name" '
                        'rt=$request_time '
                        'ua="$upstream_addr" us="$upstream_status" '
                        'ut="$upstream_response_time" ul="$upstream_response_length" '
                        'cs=$upstream_cache_status' ;

upstream u_api {
    server {{ api_addr|default('127.0.0.1') }}:{{ api_port|default('8080') }};
}

server {
{% if nginx_ssl_use is defined and nginx_ssl_use == "true" %}
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH;
    ssl_prefer_server_ciphers on;
    ssl_certificate /etc/nginx/ssl/{{ nginx_ssl_cert_name|default('nginx.crt') }};
    ssl_certificate_key /etc/nginx/ssl/{{ nginx_ssl_cert_name|default('nginx.key') }};
    ssl_dhparam /etc/nginx/ssl/{{ nginx_ssl_dh_name|default('dh4096.pem') }};
    ssl_ecdh_curve secp384r1;
    ssl_session_cache shared:TLS:10m;
    ssl_session_timeout 1d;
{% else %}
    listen 80;
{% endif %}
    server_name {{ nginx_server_name_additional|default('') }} {{ nginx_server_name|default("''") }};
    charset utf-8;
    real_ip_header X-Real-IP;
    # XSS security
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options DENY;
    add_header X-XSS-Protection "1; mode=block;";
    client_max_body_size {{ nginx_max_upload_size|default('5m') }};

    autoindex off;
    root /var/www;

    location / {
        try_files $uri $uri/ /index.html;
        gzip on;
        gzip_proxied any;
        gzip_vary on;
    }

    location /api/ {
        proxy_pass http://u_api;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_intercept_errors on;
        proxy_http_version 1.1;
        proxy_set_header X-NginX-Proxy true;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location /uploads/ {
        alias /var/www/uploads;
        try_files $uri $uri/;
        autoindex off;
    }

    location ~* .(txt|md)$ {
        return 403;
    }

    access_log /var/log/nginx/access.log main_ext;
    error_log /var/log/nginx/error.log warn;

}

{% if nginx_ssl_use is defined and nginx_ssl_use == "true" %}
server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_server_name_additional|default('') }} {{ nginx_server_name|default("''") }};
    charset utf-8;

    location / {
        return 301 https://$host$request_uri;
    }

    access_log /var/log/nginx/access.log main_ext;
    error_log /var/log/nginx/error.log warn;
}
{% endif %}

