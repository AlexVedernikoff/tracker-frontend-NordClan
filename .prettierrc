{
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "parser": "babylon",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "overrides": [
    {
      "files": [".prettierrc", "*.json", ".eslintrc", ".babelrc"],
      "options": { "parser": "json" }
    },
    {
      "files": [
        "*.css"
      ],
      "options": {
        "parser": "css"
      }
    },
    {
      "files": [
        "*.less"
      ],
      "options": {
        "parser": "less"
      }
    },
    {
      "files": [
        "*.scss"
      ],
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": [
        "*.md"
      ],
      "options": {
        "parser": "markdown"
      }
    }
  ]
}